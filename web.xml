<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
         http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <display-name>Biblioteca</display-name>

    <context-param>
        <description>Ruta donde guardar las imágenes</description>
        <param-name>image-path</param-name>
        <param-value>/home/astable/apache-tomcat-9.0.86/webapps/parque_pictures</param-value>
    </context-param>

    <!-- Declaración de Servlet -->
    <servlet>
        <servlet-name>ListReservationsServlet</servlet-name>
        <servlet-class>com.svalero.biblioteca.servlet.ListReservationsServlet</servlet-class>
    </servlet>

    <!-- Mapeo de Servlet -->
    <servlet-mapping>
        <servlet-name>ListReservationsServlet</servlet-name>
        <url-pattern>/listReservations</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>EditBook</servlet-name>
        <servlet-class>com.svalero.biblioteca.servlet.EditBook</servlet-class>
        <multipart-config>
            <location>/tmp</location>
            <max-file-size>20848820</max-file-size> <!-- ejemplo: 20MB -->
            <max-request-size>418018841</max-request-size> <!-- ejemplo: 40MB -->
            <file-size-threshold>1048576</file-size-threshold> <!-- ejemplo: 1MB -->
        </multipart-config>
    </servlet>
    <servlet-mapping>
        <servlet-name>EditBook</servlet-name>
        <url-pattern>/edit-book</url-pattern>
    </servlet-mapping>

</web-app>
